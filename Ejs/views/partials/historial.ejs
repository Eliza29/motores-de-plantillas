<h2 style="color:blue;">Vista de Productos</h2>

<% if(productos.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: white;"> <th>Nombre</th> <th>Precio</th> <th>Foto</th> </tr>
            <% for (const producto of productos) {%>
            <tr>
                <td><%=producto.nombre%></td>
                <td><%=producto.precio%></td>
                <td>
                    <img src=<%=producto.foto%> alt="img" style="width: 100px;">
                </td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">no se encontraron productos</h1>
<% } %>
<a href="/" class="btn btn-success">Ir al Inicio</a>